<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/bc</item>
    </style>

<!--    region dialog-->
    <style name="Theme.AppTheme.TranslucentStatusBar" parent="Base.Theme.AppCompat.Light.DarkActionBar" />
    <style name="DialogFragment" parent="Theme.AppTheme.TranslucentStatusBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item> <!-- 半透明 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
<!--    endregion-->

<!--    注册-->
    <style name="registerInfoType">
        <item name="android:gravity">end</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="registerEditType">
        <item name="android:gravity">start|bottom</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>
