<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="context"
            type="xyz.ttyz.tourfrxohc.MainActivity" />


        <variable
            name="user"
            type="xyz.ttyz.tourfrxohc.models.UserModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bc"
        android:orientation="vertical"
        tools:context="xyz.ttyz.tourfrxohc.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="58dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                binding:onClickCommand="@{context.clickAvatarCommand}"
                android:background="@drawable/bg_start_game"
                android:padding="3dp">

                <xyz.ttyz.toubasemvvm.weight.CardImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    binding:isCircle="@{true}"
                    binding:imageUrl="@{user.avatar}"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:padding="8dp"
                    binding:onClickCommand="@{context.clickNameCommand}"
                    binding:text="@{user.nickname}"
                    android:textColor="@color/black"
                    binding:typeFace='@{"YouSheBiaoTiHei-2.ttf"}'
                    tools:text="@string/app_name"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="level: 1"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"
                    binding:typeFace='@{"YouSheBiaoTiHei-2.ttf"}'
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:text='@{"level: " + user.level}'/>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/view_start"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="28sp"
                binding:typeFace='@{"YouSheBiaoTiHei-2.ttf"}'
                android:background="@drawable/bg_start_game"
                android:text="开始游戏"
                binding:onClickCommand="@{context.startGameCommand}" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="128dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_login"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="25dp"
                binding:activated="@{true}"
                binding:onClickCommand="@{context.logOutCommand}"
                binding:typeFace='@{"YouSheBiaoTiHei-2.ttf"}'
                android:text="切换账号"/>
        </RelativeLayout>
    </LinearLayout>

</layout>