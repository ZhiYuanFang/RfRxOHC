<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="user"
            type="xyz.ttyz.tourfrxohc.models.UserModel" />
        <variable
            name="context"
            type="xyz.ttyz.tourfrxohc.activity.GameActivity" />
    </data>

    <LinearLayout
        android:visibility="@{user == null ? View.INVISIBLE : View.VISIBLE}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:orientation="horizontal"
        android:paddingEnd="35dp"
        tools:ignore="UseCompoundDrawables">

        <TextView
            binding:visible="@{user.speaking}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="发言中..." />

        <RelativeLayout
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginStart="15dp"
            android:onClick="@{()->context.clickBody(user)}">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/testpic"
                binding:isCircle="@{true}"
                binding:imageUrl="@{user.avatar}" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_voted"
                binding:visible="@{user.voted}"/>
            <TextView
                binding:visible="@{!user.inHome}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_login"
                android:padding="5dp"
                binding:typeFace='@{"YouSheBiaoTiHei-2.ttf"}'
                android:text="离开"/>


            <View
                binding:visible="@{user.canBeVoted &amp;&amp; context.isVoteRoundFiled}"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:background="@color/colorEECC76"/>
        </RelativeLayout>
    </LinearLayout>
</layout>