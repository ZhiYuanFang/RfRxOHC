<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="context"
            type="xyz.ttyz.tourfrxohc.dialog.JoinHomeDialogFragment" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="45dp"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_conor_dialog">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="38dp"
            android:text="@string/app_name"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/strack_rectangle_yellow"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="房间号: "/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center"
                tools:text="1"
                android:textSize="12sp"
                android:inputType="number"
                android:background="@null"
                android:hint="请输入房间号"
                android:text="@={context.roomIdFiled}"
                android:textColor="@color/black"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_login"
            android:layout_marginTop="68dp"
            binding:onClickCommand="@{context.confirmJoinCommand}"
            binding:activated="@{!context.roomIdFiled.empty}"
            android:text="确定加入"/>

    </LinearLayout>
</layout>