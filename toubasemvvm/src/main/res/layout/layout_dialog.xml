<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_cornor_10">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="上传成功"/>

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:textColor="#333333"
                android:textSize="16sp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginBottom="28dp"
                android:text="您编辑的视频已经上传成功"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:divider="@drawable/divider_1_gray_shu"
                android:showDividers="middle"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:foreground="?selectableItemBackground"
                    android:background="@drawable/bg_conor_left_bottom_10"
                    android:text="取消"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:foreground="?selectableItemBackground"
                    android:background="@drawable/bg_conor_right_bottom_10"
                    android:textSize="16sp"
                    android:text="确定"
                    android:layout_weight="1"
                    android:textColor="#4B8EFF" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>